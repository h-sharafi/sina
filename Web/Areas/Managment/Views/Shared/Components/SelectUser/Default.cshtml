@model List<Domain.AppUser>

@{
    int index = 0;
}
<div class="container" style="padding-top: 40px">
    @if (Model.Count > 0)
    {
        <table class="table table-bordered text-center bg-white" style="vertical-align: middle">
            <thead>
                <tr>
                    <th scope="col" style="width:10%">ردیف</th>
                    <th scope="col" >نام </th>
                    <th scope="col">ایمیل</th>
                    <th scope="col" style="width:30%">عملیات</th>

                </tr>
            </thead>
            <tbody style="vertical-align: middle">
                @foreach (var user in Model)
                {
                    <tr id="listTr@(user.Id)">
                        <td class="ver-middle">@(++index)</td>
                        <td class="ver-middle">@user.DisplayName</td>
                        <td class="ver-middle">@(user.Email)</td>
                        <td class="ver-middle">
                            <button class="btn btn-outline-success selectUserForTeam" data-id="@(user.Id)"><span>انتخاب</span><span><i style="margin-right:3px" class="fa fa-icons"></i></span></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

