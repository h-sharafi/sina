@model List<Team>
@{
    ViewData["Title"] = "TeamList";
    int index = 0;
}

<div style="padding: 11px 72px;">
    <a asp-action="EditTeam" class="btn btn-outline-info" >افزودن</a>
</div>
<div class="container" style="padding-top: 40px">
    @if (Model.Count > 0)
    {
        <table class="table table-bordered text-center bg-white" style="vertical-align: middle">
            <thead>
                <tr>
                    <th scope="col" style="width:10%">ردیف</th>
                    <th scope="col"style="width:110px">تصویر</th>
                    <th scope="col">نام</th>
                    <th scope="col" style="width:30%">عملیات</th>

                </tr>
            </thead>
            <tbody style="vertical-align: middle">
                @foreach (var team in Model)
                {
                    <tr id="listTr@(team.Id)">
                        <td class="ver-middle">@(++index)</td>
                        <td class="ver-middle"><img style="width: 100px; height:100px;" src="@(team.ProfileImage != null ? $"/UplodedFiles/{team.ProfileImage.FileName}" :$"/UplodedFiles/noImage.jpg")" /></td>
                        <td class="ver-middle">@(team.TeamAppUser.DisplayName)</td>
                        <td class="ver-middle">
                            <a class="btn btn-outline-success" asp-action="EditTeam" asp-route-id="@(team.Id)"><span>ویرایش</span><span><i style="margin-right:3px" class="fa fa-edit"></i></span></a>
                            <a asp-action="Delete" class="btn btn-outline-danger deleteTeamId" data-id="@(team.Id) " asp-route-id="@(team.Id)"><span>حذف</span><span><i style="margin-right:3px" class="fa fa-trash"></i></span></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>


@section Scripts {
    <script src="~/Scripts/Managment/CreatAudioCms.js"></script>
}
@section Styles{
    <style>
       .ver-middle{
           vertical-align:middle;
       }
    </style>

}